@using LearnEXM.Feature.Marketing.Email.Controllers
@using LearnEXM.Feature.Marketing.Email
@using LearnEXM.Feature.Marketing.Email.Models
@using LearnEXM.Feature.Marketing.Email.Extensions
@model LearnEXM.Feature.Marketing.Email.Models.HeaderViewModel

@Html.EETableStart()

@if (Model?.DataSource != null)
{

  <tr>
    <td style="padding: 30px 20px; background-color:@ProjConstants.Styling.HexColors.White; text-align: center">
      <table role="presentation" style="width: 100%; border: none; border-spacing: 0;">
        <tr>
          <td align="left" style="text-align: left; width: 50%;">
            @Html.Sitecore().BeginField(ProjConstantsFields.Header.Link, Model.DataSource,
               new
               {
                   style = "background: " + @ProjConstants.Styling.HexColors.White + "; text-transform: uppercase; text-decoration: none; padding: 10px 38px; border: 1px solid " + @ProjConstants.Styling.HexColors.BrightBlue + "; color: " + @ProjConstants.Styling.HexColors.BrightBlue + "; display: inline-block; mso-padding-alt: 0;",
                   text = " "
               })

            @Html.Sitecore().Field(ProjConstantsFields.Header.Logo, Model.DataSource,
                new
                     {
                       width = "130",
                       height = "75",
                    })

            @Html.Sitecore().EndField()
          </td>
          <td align="right" style="text-align: right; width: 50%;">
            <span style="color: @ProjConstants.Styling.HexColors.OuterSpace; font-size: 13px;">
              @Model.FormattedDate
            </span>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr>
    <td style="display: block; padding: 0;">
      @Html.Sitecore().Field(ProjConstantsFields.Header.Bar,
         new
              {
             width = "600",
             height = "20",
             style = "display: block; width: 600px; height: 20px;"
          })
    </td>
  </tr>

}
@Html.EETableEnd()